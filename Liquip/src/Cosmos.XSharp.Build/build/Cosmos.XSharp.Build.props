<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <CosmosXSharpFrameworkPath>$(IntermediateOutputPath)cosmos-xsharp\</CosmosXSharpFrameworkPath>
  </PropertyGroup>

  <PropertyGroup>
    <CosmosXSharpTasksAssembly
      Condition="'$(CosmosXSharpTasksAssembly)' == '' OR !Exists('$(CosmosXSharpTasksAssembly)')">$(MSBuildThisFileDirectory)\lib\net9.0\Cosmos.XSharp.Build.dll
    </CosmosXSharpTasksAssembly>
  </PropertyGroup>

  <UsingTask TaskName="Cosmos.XSharp.Build.Tasks.XSharpTask" AssemblyFile="$(CosmosXSharpTasksAssembly)"/>


</Project>
