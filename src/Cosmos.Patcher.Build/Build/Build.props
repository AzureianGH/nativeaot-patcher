<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemGroup>
    <PackageReference Include="Cosmos.Patcher"
                      Version="$(Version)"
                      GeneratePathProperty="true" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="Cosmos.Patcher"
                      Version="$(Version)"
                      GeneratePathProperty="true" />
  </ItemGroup>

  <PropertyGroup>
    <LiquipPatcherAssembly
      Condition="'$(LiquipPatcherAssembly)' == '' OR !Exists('$(LiquipPatcherAssembly)')">$(Liquip_Patcher)\bin\Debug\net8.0\Cosmos.Patcher.Build.dll
    </LiquipPatcherAssembly>
    <LiquipPatcherAssembly
      Condition="'$(LiquipPatcherAssembly)' == '' OR !Exists('$(LiquipPatcherAssembly)')">$(Liquip_Patcher)\bin\Debug\net8.0\Cosmos.Patcher.Build.dll
    </LiquipPatcherAssembly>
    <LiquipPatcherTasksAssembly
      Condition="'$(LiquipPatcherTasksAssembly)' == '' OR !Exists('$(LiquipPatcherTasksAssembly)')">$(MSBuildThisFileDirectory)\bin\Debug\net8.0\Cosmos.Patcher.Build.dll
    </LiquipPatcherTasksAssembly>
  </PropertyGroup>

  <UsingTask TaskName="Cosmos.Patcher.Build.PatcherTask" AssemblyFile="$(LiquipPatcherTasksAssembly)"/>
 
  <Target Name="RebuildReferences" BeforeTargets="BeforeCompile" AfterTargets="FindReferenceAssembliesForReferences">
    <ItemGroup>
      <ReferencePathWithRefAssemblies Remove="@(ReferencePathWithRefAssemblies)"/>
      <ReferencePath Remove="@(ReferencePath)"/>
    </ItemGroup>
  </Target>

</Project>
