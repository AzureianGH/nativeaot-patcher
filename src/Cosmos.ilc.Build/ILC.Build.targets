<Project>
  <PropertyGroup>
    <CompileWithILCDependsOn>WriteILCRsp</CompileWithILCDependsOn>
    <IlcUseNativeAOTRuntimePackLayout>true</IlcUseNativeAOTRuntimePackLayout>
  </PropertyGroup>

  <Target Name="CosmosILCSetupProperties">
    <PropertyGroup>
      <NativeOutputPath>$(OutputPath)cosmos/native/</NativeOutputPath>
      <IlcIntermediateOutputPath>$(IntermediateOutputPath)cosmos/native/</IlcIntermediateOutputPath>
      <FinalAssembly>$(NativeOutputPath)$(AssemblyName)</FinalAssembly>
      <IlcSdkPath>$(IlcHostPackagePath)/sdk/</IlcSdkPath>
      <IlcToolsPath>$(IlcHostPackagePath)/tools/</IlcToolsPath>
    </PropertyGroup>

    <ItemGroup>
      <IlcCompileInput Include="$(OutputPath)$(AssemblyName).dll" />
      <ManagedBinary Include="$(OutputPath)$(AssemblyName).dll">
        <RspFile>$(IlcIntermediateOutputPath)$(AssemblyName).ilc.rsp</RspFile>
        <OutputFile>$(IlcIntermediateOutputPath)$(AssemblyName)$(IlcOutputFileExt)</OutputFile>
        <LinkerRsp>$(IlcIntermediateOutputPath)$(AssemblyName).link.rsp</LinkerRsp>
        <ExportsFile>$(IlcIntermediateOutputPath)$(AssemblyName)$(ExportsFileExt)</ExportsFile>
      </ManagedBinary>
    </ItemGroup>

    <MakeDir Directories="$(IlcIntermediateOutputPath)" />
    <MakeDir Directories="$(NativeOutputPath)" />
  </Target>

  <Target Name="WriteILCRsp" AfterTargets="CosmosILCSetupProperties">
    <ItemGroup>
      <IlcArg Include="@(IlcCompileInput)" />
      <IlcArg Include="-o:%(ManagedBinary.OutputFile)" />
      <IlcArg Include="--systemmodule:$(AssemblyName)" />
      <IlcArg Include="--nativelib" />
      <IlcArg Include="--noinlinetls" />
      <IlcArg Include="-g" />
      <IlcArg Include="-O" />
      <IlcArg Include="--exportsfile:%(ManagedBinary.ExportsFile)" />
      <IlcArg Include="--generateunmanagedentrypoints:System.Private.CoreLib" />
      <IlcArg Include="--export-unmanaged-entrypoints" />
    </ItemGroup>
    <WriteLinesToFile File="%(ManagedBinary.RspFile)" Lines="@(IlcArg)" Overwrite="true" />
  </Target>

  <Target Name="CompileWithILC" DependsOnTargets="WriteILCRsp">
    <Message Importance="High" Text="⚙️ [ILC] Compiling: %(ManagedBinary.Identity) with RSP: %(ManagedBinary.RspFile)" />
    <Exec Command="&quot;$(IlcToolsPath)/ilc&quot; @&quot;%(ManagedBinary.RspFile)&quot;" />
    <Message Importance="High" Text="✅ [ILC] Output: %(ManagedBinary.OutputFile)" />
  </Target>

  <Target Name="LinkTarget" AfterTargets="Publish">
    <Exec Command="ld.lld -T src/linker.ld -m elf_x86_64 -nostdlib -static -z max-page-size=0x1000 $(MSBuildProjectDirectory)/bin/$(Configuration)/net8.0/$(RuntimeIdentifier)/native/$(AssemblyName).a -o $(MSBuildProjectDirectory)/bin/$(Configuration)/net8.0/$(RuntimeIdentifier)/publish/$(AssemblyName).elf" />
    <Message Text="✅ Built ELF: $(AssemblyName).elf in publish folder" Importance="High" />
  </Target>

  <Import Project="$(MSBuildThisFileDirectory)/ILC.Build.Unix.targets" Condition="'$(OS)' != 'Windows_NT'" />
</Project>
